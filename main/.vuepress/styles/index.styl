// Extra styles for site
@import './palette'

.ag-btn
  background-color $accentColor
  color $white
  font-size inherit
  border-radius 4px
  transition background-color .1s ease
  border-bottom 1px solid #9a2024
  border-top none
  border-left none
  border-right none

  &:hover
    cursor pointer
    background-color #c4282e

  &--large
    width 200px
    height 50px

.flex
  display flex

  &--column
    flex-direction column

  &--center
    align-items center

.zoe-version
  font-size: .75em
  border-bottom: 1px #2c3e50 solid
  padding-bottom: 3px
